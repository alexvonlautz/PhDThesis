journal = {The Journal of {\ldots}},
keywords = {1969,1991,1993,bruce et al,computational vision,evidence from cognitive psychology,extrastriate cortex,face perception,functional,fusiform gyrus,mri,object recognition,tanaka and farah,turk and pent-,ventral visual pathway,yin},
pmid = {9151747},
primaryClass = {gr-qc},
title = {{The fusiform face area: a module in human extrastriate cortex specialized for face perception}},
