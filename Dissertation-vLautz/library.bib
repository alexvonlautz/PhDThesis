title = {{Information encoding and computation with spikes and bursts}},
year = {2003}
}
@article{VanEde2014,
abstract = {What are the spectral signatures of somatosensory attention? Here we show that the answer to this question depends critically on the sensory context in which attention is deployed. We recorded magnetoencephalography (MEG) in humans and investigated tactile spatial attention in two different sensory contexts: in anticipation and during the processing of sustained tactile stimuli. We observe a double dissociation between these contexts and two key electrophysiological correlates of attention: in anticipation we primarily observe an attentional suppression of contralateral alpha and beta oscillations (8-12 and 15-30. Hz, respectively), whereas during stimulus processing we primarily observe an attentional amplification of contralateral gamma oscillations (55-75. Hz). This dissociation is well explained by the different neural states that occur prior and during the stimulus, and on which attention can exert its influence. In line with analogous observations in the visual modality, this suggests that the neural implementation of attention must be understood in relation to context and existing brain states. Consequently, different signatures of attention may contribute to perception in different contexts and, as our data reveals for the attentional modulation of alpha oscillations, these are not always required for attention to improve perception. At the same time, these data demonstrate that the attentional modulations of alpha and gamma oscillations (during, respectively, attentional orienting and attentional selection), are generalizable phenomena across the different sensory modalities. {\textcopyright} 2014 Elsevier Inc.},
author = {van Ede, Freek and Szeb{\'{e}}nyi, Szabolcs and Maris, Eric},
doi = {10.1016/j.neuroimage.2014.04.047},
isbn = {1095-9572 (Electronic)$\backslash$r1053-8119 (Linking)},
issn = {10959572},
journal = {NeuroImage},
keywords = {Alpha oscillations,Gamma oscillations,Magnetoencephalography (MEG),Somatosensory,Spatial attention,Spectral signature},
pmid = {24769186},
title = {{Attentional modulations of somatosensory alpha, beta and gamma oscillations dissociate between anticipation and stimulus processing}},
year = {2014}
}
@article{Hamalainen1993,
abstract = {Magnetoencephalography (MEG) is a noninvasive technique for investigating neuronal activity in the living$\backslash$nhuman brairi. The time resolution of the method is better than 1 ms and the spatial discrimination is,$\backslash$nunder favorable circumstances, 2—3 mm for sources in the cerebral cortex. In MEG studies, the weak$\backslash$n10 fT—1 pT magnetic fields produced by electric currents fiowing in neurons are measured with multichannel$\backslash$nSQUID {\{}superconducting quantum interference device) gradiometers. The sites in the cerebral$\backslash$ncortex that are activated by a stimulus can be found from the detected magnetic-field distribution, provided$\backslash$nthat appropriate assumptions about the source render the solution of the inverse problem unique.$\backslash$nMany interesting properties of the working human brain can be studied, including spontaneous activity$\backslash$nand signal processing following external stimuli. For clinical purposes, determination of the locations of$\backslash$nepileptic foci is of interest. The authors begiri with a general introduction and a short discussion of the$\backslash$nneural basis of MEG. The mathematical theory of the method is then explained in detail, followed by a$\backslash$nthorough description of MEG instrumentation, data analysis, and practical construction of multi-SQUID$\backslash$ndevices. Finally, several MEG experiments performed in the authors laboratory are described, covering$\backslash$nstudies of evoked responses and of spontaneous activity in both healthy and diseased brains. Many MEG$\backslash$nstudies by other groups are discussed briefiy as well.}},
