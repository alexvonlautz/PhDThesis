journal = {Annual Review of Neuroscience},
pmid = {12052908},
title = {{Intentional Maps in Posterior Parietal Cortex}},
year = {2002}
}
@misc{Nieuwenhuis2005,
abstract = {Psychologists and neuroscientists have had a long-standing interest$\backslash$nin the P3, a prominent component of the event-related brain potential.$\backslash$nThis review aims to integrate knowledge regarding the neural basis$\backslash$nof the P3 and to elucidate its functional role in information processing.$\backslash$nThe authors review evidence suggesting that the P3 reflects phasic$\backslash$nactivity of the neuromodulatory locus coeruleus-norepinephrine (LC-NE)$\backslash$nsystem. They discuss the P3 literature in the light of empirical$\backslash$nfindings and a recent theory regarding the information-processing$\backslash$nfunction of the LC-NE phasic response. The theoretical framework$\backslash$nemerging from this research synthesis suggests that the P3 reflects$\backslash$nthe response of the LC-NE system to the outcome of internal decision-making$\backslash$nprocesses and the consequent effects of noradrenergic potentiation$\backslash$nof information processing.},
