journal = {Brain},
keywords = {Adult,Alpha Rhythm,Beta Rhythm,Brain Mapping,Brain Mapping: methods,Electric Stimulation,Electrocardiography,Extremities,Extremities: physiology,Face,Face: physiology,Humans,Motor Cortex,Motor Cortex: physiology,Movement,Movement: physiology,Muscle Contraction,Muscle Contraction: physiology,Somatosensory Cortex,Somatosensory Cortex: physiology,Time Factors,Tongue,Tongue: physiology},
