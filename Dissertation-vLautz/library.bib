journal = {Cerebral cortex (New York, N.Y. : 1991)},
keywords = {MVPA,cognitive control,frontoparietal cortex,task preparation,visual cortex,working memory},
pmid = {26908634},
title = {{Neural Coding for Instruction-Based Task Sets in Human Frontoparietal and Visual Cortex}},
year = {2017}
}
@incollection{Smulders2012,
