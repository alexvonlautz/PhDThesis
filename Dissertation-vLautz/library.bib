journal = {Journal of Neuroscience},
keywords = {decision,electrophysiology,lateral intraparietal area,lip,random-dot motion,reac-,tion time,vision},
pmid = {12417672},
title = {{Response of neurons in the lateral intraparietal area during a combined visual discrimination reaction time task.}},
